<h2>ToDoを編集</h2>

<%= form_with model: @todo, local: true do |form| %>
  <div>
    <%= form.label :title, "タイトル" %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.submit "更新する" %>
  </div>
<% end %>

<%= link_to "削除する", todo_path(@todo), method: :delete, data: { confirm: "本当に削除しますか？" }, style: "color: red; margin-right: 1rem;" %>

<%= link_to "トップページへ戻る", root_path %>
