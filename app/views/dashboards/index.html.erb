<section id="todo" style="margin-bottom: 2rem;">
  <h2 class="section-title">ToDo</h2>
  <form>
    <input type="text" placeholder="ToDoを追加" />
    <button type="submit">追加</button>
  </form>
</section>

<section id="wish" style="margin-bottom: 2rem;">
<h2 class="section-title">Wish</h2>
  <form>
    <input type="text" placeholder="Wishを追加" />
    <button type="submit">追加</button>
  </form>
</section>

<section id="schedule" style="margin-bottom: 2rem;">
  <h2 style="text-decoration: underline;">Schedule</h2>

  <div style="display: flex; gap: 0.5rem; align-items: center; margin-bottom: 1rem;">
    <label for="time">時間:</label>
    <input type="time" id="time" name="time" />

    <label for="task">ToDo/Wish:</label>
    <select id="task" name="task">
    <option disabled selected style="color: gray;">選択してください</option>  
    </select>
  </div>

  <button type="button">追加</button>
</section>

